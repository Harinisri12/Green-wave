  <body>
<%# Import nav %>
  <%# Absolute SVG that is displayed on page %>
			<img src="/media/topItem.svg" class="topItemLarge" />
		<header>
			<%- include('../partials/nav') %>
		</header>
<div class="container">
  
  <div id="app-display">
  <h1>Carbon Footprint Calculator</h1>
    <form>
      <label for="electricity">Electricity usage (kWh/year):</label>
      <input type="number" id="electricity" name="electricity">
      <br>
      <label for="gas">Gas usage (therms/year):</label>
      <input type="number" id="gas" name="gas">
      <br>
      <label for="car">Car usage (miles/year):</label>
      <input type="number" id="car" name="car">
      <br>
      <label for="public-transportation">Public transportation usage (miles/year):</label>
      <input type="number" id="public-transportation" name="public-transportation">
      <br>
      <button type="button" id="calculate">Calculate</button>
    </form>
    <div id="result"></div>
    <script>
const calculateButton = document.getElementById('calculate');
const resultDiv = document.getElementById('result');

calculateButton.addEventListener('click', function() {
  const electricityUsage = document.getElementById('electricity').value;
  const gasUsage = document.getElementById('gas').value;
  const carUsage = document.getElementById('car').value;
  const publicTransportationUsage = document.getElementById('public-transportation').value;

  const totalCarbonFootprint = (electricityUsage * 0.00037) + (gasUsage * 0.0053) + (carUsage * 0.00062) + (publicTransportationUsage * 0.00014);

  resultDiv.innerHTML = `Your carbon footprint is ${totalCarbonFootprint.toFixed(2)} metric tons CO2e per year`;
});

</script>
</body>